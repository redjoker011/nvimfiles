{
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "Markdown",
    "javascript",
    "typescript",
    "typescript",
    "json",
    "graphql",
    "vue",
    "ruby"
  ],
  "prettier.requireConfig": true,
  "prettier.disableLanguages": [],
  "prettier.eslintIntegration": true,

  "vetur.trace.server": "verbose",

  "suggest.enablePreview": true,
  "suggest.disableKind": true,
  "signature.preferShownAbove": true,

  "codeLens.enable": true,
  "typescript.implementationsCodeLens.enable": false,
  "typescript.referencesCodeLens.enable": false,

  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },

  "diagnostic.errorSign": "▬",
  "diagnostic.warningSign": "▪",
  "diagnostic.infoSign": "▪",
  "diagnostic.hintSign": "⋅",

  "solargraph.commandPath": "/$HOME/.rbenv/shims/solargraph",
  "solargraph.autoformat": false,
  "solargraph.formatting": true,
  "solargraph.diagnostics": true,
  "solargraph.hover": true,

  "snippets.userSnippetsDirectory": "~/.config/nvim/ultisnips",

  "css.validate": false,
  "tsserver.trace.server": "verbose",
  "languageserver": {
      "csharp-ls": {
        "command": "/$HOME/.dotnet/tools/csharp-ls",
        "filetypes": ["cs"],
        "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
      }
  }
}
